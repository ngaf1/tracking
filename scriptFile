pipeline{
    agent any
    stages{
        stage('Building Artifact'){
        steps{
        withMaven(maven:'M2_HOME')
        {
        sh "mvn clean install package -DskipTests -Dmaven.javadoc.skip=true"

        }
        }
        }
        stage('Code Quality Analysis'){
            
        steps{
        withSonarQubeEnv('sonar_jenkins')
        {
        withMaven(maven:'M2_HOME')
        {
        sh "mvn sonar:sonar"
        }    
        }    
        }
        }
    }
}

